<%= form_for @recipe do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>

        <%= f.fields_for :ingredients do |x| %>
        <% @i=1 %>
        <%= x.label "INGREDIENT ##{@i}" %><br>
        <%= x.text_field :name %><br>
        
        <%= x.label "HOW MUCH?" %><br>
        <%= x.text_field :quantity %><br>
        <% @i+=1 %>

        <% end %>

    <%= f.submit %>

<% end %>